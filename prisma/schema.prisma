generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  telegramId   String   @unique
  username     String?
  firstName    String?
  lastName     String?
  balance      Float    @default(0)
  referralCode String   @unique @default(uuid())
  referredBy   String?
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  purchases Purchase[]
  payments  Payment[]
  configs   Config[]

  @@index([telegramId])
}

model Plan {
  id          Int      @id @default(autoincrement())
  name        String
  duration    Int      // days
  price       Float
  traffic     Int      // GB
  connections Int      // number of devices
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  purchases   Purchase[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Float
  method    String   // card, crypto, star, gateway
  status    String   // pending, approved, rejected
  receipt   String?  // photo file_id or tx hash
  adminNote String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
}

model Purchase {
  id          Int        @id @default(autoincrement())
  userId      Int
  planId      Int
  configData  String
  expiryDate  DateTime
  createdAt   DateTime   @default(now())

  user        User       @relation(fields: [userId], references: [id])
  plan        Plan       @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([planId])
}

model Config {
  id          Int        @id @default(autoincrement())
  userId      Int
  uuid        String     @unique
  name        String
  expiryDate  DateTime
  createdAt   DateTime   @default(now())

  user        User       @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}